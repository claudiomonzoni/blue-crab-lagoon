  var map = L.map("mapa").setView([17.536472, -101.440818], 15);
  L.tileLayer("https://tile.openstreetmap.org/{z}/{x}/{y}.png", {
    maxZoom: 27,
  }).addTo(map);

  L.marker([17.536472, -101.440818])
    .addTo(map)
    .bindPopup("The Blue Crab Lagoon")
